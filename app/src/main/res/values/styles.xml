<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialogEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:ems">10</item>
    </style>

    <style name="dialogTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="frontMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:layout_weight">8</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="frontBaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="startButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="recyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="floatingButtonStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/float_button</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>